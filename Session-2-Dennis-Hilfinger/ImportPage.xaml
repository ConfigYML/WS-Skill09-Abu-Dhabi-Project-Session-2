<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_2_Dennis_Hilfinger.ImportPage"
             Title="ImportPage">
    <VerticalStackLayout
        Spacing="20"
        Margin="0, 50, 0, 0">
        <Button
            Text="Cancel"
            Clicked="Cancel"
            WidthRequest="150"
            HeightRequest="50"/>
        <Label
            Text="Please select the file you would like to import below"
            FontSize="20"
            HorizontalOptions="Center" />
        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <Entry
                x:Name="PathEntry"
                Placeholder="File path"
                WidthRequest="400"/>
            <Button 
                Clicked="SelectFile"
                Text="Select file"
                WidthRequest="150"
                HeightRequest="50"/>
            <Button
                Clicked="ImportFile"
                Text="Import"
                WidthRequest="150"
                HeightRequest="50"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
            Margin="0, 50, 0, 0"
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="400">
            <Label
                Text="Successful changes:"
                FontSize="20"
                HorizontalOptions="Center" />
            <Label
                x:Name="SuccessfulChangesLabel"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Text="0"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="400">
            <Label
                Text="Duplicate values:"
                FontSize="20"
                HorizontalOptions="Center" />
            <Label
                x:Name="DuplicateValuesLabel"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Text="0"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="400">
            <Label
                Text="Incomplete entries:"
                FontSize="20"
                HorizontalOptions="Center" />
            <Label
                x:Name="IncompleteEntriesLabel"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Text="0"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>